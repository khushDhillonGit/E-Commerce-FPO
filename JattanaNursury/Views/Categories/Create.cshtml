@model JattanaNursury.Models.Category

@{
    ViewData["Title"] = "Create";
}
@section Styles
    {
    <link href="~/css/categories.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container-fluid add-product-container mt-5">
    <div class="row">
        <div class="col-12 top-container p-4">
            <h2 class="text-center text-primary">Add Category</h2>
            </div>
        <div class="col-12 bottom-container p-5">
            <form asp-action="Create" class="create-form" enctype="multipart/form-data">
                <div class="row g-4">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    </div>
                </div>
                <div class="row mt-4 btn-row pt-3">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn back-btn">Back to List</a>
                            <input type="submit" value="Create" class="btn create-btn" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



